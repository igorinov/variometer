<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_latitude"
        android:layout_width="match_parent"
        android:layout_height="54pt"
        android:layout_margin="3pt"
        android:padding="3pt"
        android:textSize="7pt"
        android:text="@string/label_pressure">
    </TextView>

    <EditText
        android:id="@+id/edit_pressure"
        android:layout_width="match_parent"
        android:layout_height="24pt"
        android:fontFamily="monospace"
        android:textSize="12pt" >
    </EditText>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/unit_hpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:text="hPa" />
        <RadioButton
            android:id="@+id/unit_mmhg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:text="mmHg" />
        <RadioButton
            android:id="@+id/unit_inhg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:text="inHg" />
    </RadioGroup>

    <Button
        android:id="@+id/button_enter"
        android:layout_width="match_parent"
        android:layout_height="24pt"
        android:text="@string/enter"
        android:textAllCaps="false" />

</LinearLayout>